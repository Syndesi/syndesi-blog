{
  "git": {
    "tagName": "v${version}"
  },
  "github": {
    "release": true,
    "tokenRef": "GITHUB_TOKEN_SYNDESI_BLOG",
    "assets": [
      "./release/*.zip"
    ]
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:init": [
      "yarn lint"
    ],
    "after:version:bump": [
      "node .release.js"
    ],
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  }
}